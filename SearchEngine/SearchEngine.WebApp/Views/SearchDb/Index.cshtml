@model IEnumerable<Request>
@{
    ViewData["Title"] = "Search In Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search In DataBase</h1>
<hr />
<div class="filter">
    <form class="form-inline">
        <div class="form-group mx-sm-3 mb-2">            
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">                
                @Html.DropDownList("wordId",ViewBag.WordsCollection as SelectList, "..Select..",new { @class="form-control" })
            </div> 
        </div>
        <input type="button" class="btn btn-primary mb-2" id="btnDbResult" value="Filter" />
    </form>
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Engine</th>
                <th>SearchWord</th>
                <th>Count</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Date</td>
                    <td>@m.Engine</td>
                    <td>@m.SearchWord</td>
                    <td>@m.Result.ItemsCount</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = @m.Id }, new { @class = "linkDetails"})</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="modDialog">
    <div class="modal-dialog" id="dialogContent"></div>
</div>
@section Scripts {
    <script>           
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".linkDetails").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}

